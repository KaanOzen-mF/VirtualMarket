<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/snaksTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snaks"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.71"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/waterAndOtherTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water And Others"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/fruitVegatablesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:text="Fruit and Vegatables"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/stapleFoodsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="244dp"
        android:text="Staple Foods"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/homeView"
        android:layout_width="100dp"
        android:layout_height="46dp"
        android:layout_marginTop="556dp"
        android:onClick="homePageOnClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/homepng" />

    <ImageView
        android:id="@+id/profileView"
        android:layout_width="100dp"
        android:layout_height="46dp"
        android:layout_marginTop="556dp"
        android:onClick="profileOnClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/homeView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profilepng" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="303dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/waterandotherView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/water" />

        <ImageView
            android:id="@+id/snacksView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="1"
            app:srcCompat="@drawable/snacks" />

        <ImageView
            android:id="@+id/stapleFoodView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="1"
            app:srcCompat="@drawable/mainfood" />

        <ImageView
            android:id="@+id/vegatablesView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="0"
            app:srcCompat="@drawable/fruitvegatables" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>